<UserControl x:Class="FractalzWPF.Infrastructure.Vizualizer.DialogsUserControl"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FractalzWPF.Infrastructure.Vizualizer"
             mc:Ignorable="d" 
             d:DesignHeight="684.04" d:DesignWidth="450">
    <DockPanel Margin="0,2,0,-2">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" Orientation="Horizontal" DockPanel.Dock="Top" Height="60">
            <md:PackIcon VerticalAlignment="Center" Kind="Search" Width="30" Height="30"/>
            <TextBox Width="320" FontSize="16" md:HintAssist.Hint="Найти диалог" md:HintAssist.HelperText="(начнте вводить имя или название диалога)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
        </StackPanel>
        <StackPanel Margin="0,20,0,0" Orientation="Vertical" Name="dialogsSpace">
        </StackPanel>
    </DockPanel>
</UserControl>
